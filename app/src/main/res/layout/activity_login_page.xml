<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage"
    android:background="@drawable/hopefullyfinalbackground">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="238dp"
        android:layout_height="198dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/etext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nahlatlogo" />

    <EditText
        android:id="@+id/etext"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_marginBottom="4dp"

        android:drawableLeft="@drawable/baseline_person_24"
        android:hint="Enter Email"
        app:layout_constraintBottom_toTopOf="@+id/ptext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#808080"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/ptext"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_marginBottom="356dp"

        android:drawableLeft="@drawable/baseline_lock_24"
        android:hint="Enter Password"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#808080"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/fpass"
        android:layout_width="151dp"
        android:layout_height="39dp"
        android:layout_marginBottom="4dp"
        android:hint="Forgot Password"
        android:textColor="#2B2B2B"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColorHint="@color/purple_700"
        app:layout_constraintBottom_toTopOf="@+id/lbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/lbtn"
        android:layout_width="287dp"
        android:layout_height="58dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#FCAE1E"
        android:hint="LOG IN"
        android:textColorHint="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/nuser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nuser"
        android:layout_width="274dp"
        android:layout_height="38dp"
        android:layout_marginBottom="168dp"
        android:hint="New User ? Register User Here"
        android:textSize="18dp"
        android:textColorHint="#F10000"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>